<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeSettingActivity"
    android:background="?attr/mainBackgroundColorAttr"
    >

    <Button
        android:id="@+id/normalTheme"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374"
        android:text="Normal Theme"
        android:background="?attr/ButtonBackgroundColorAttr"
        android:textColor="?attr/textColorAttr"
        android:fontFamily="casual"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/darkTheme"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Dark Theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normalTheme"
        app:layout_constraintVertical_bias="0.125"
        android:textColor="?attr/textColorAttr"
        android:background="?attr/ButtonBackgroundColorAttr"
        android:fontFamily="casual"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>